{
  "name": "Giphy Markdown Link",
  "description": "Copy a Giphy's GIF link in markdown format",
  "homepage_url": "https://github.com/pjotrvdh/Giphy-Markdown-Link",
  "version": "1.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "64": "assets/icons/icon64.png",
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "run_at" : "document_idle",
      "js": ["src/content/giphy-markdown-link.js"],
      "css": ["src/content/giphy-markdown-link.css"],
      "matches": [
        "*://*.giphy.com/*"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "scripting"
  ]
}
